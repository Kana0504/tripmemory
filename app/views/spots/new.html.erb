<h1>(自分の題名)</h1>
<h3>新規投稿ページ</h3>
<%= form_for @spot do |f| %>

  <%= f.select :category, [["場所", "place"], ["ご飯", "food"], ["お土産", "souvenir"]], include_blank: "どの投稿？" %>

  <h5>総合評価</h5>
   <div class="post_form">
    <%= f.radio_button :overall, 5 ,id: 'star1'%>
    <label for="star1"><span class="text">最高</span>★</label>

    <%= f.radio_button :overall, 4 ,id: 'star2'%>
    <label for="star2"><span class="text">良い</span>★</label>

    <%= f.radio_button :overall, 3 ,id: 'star3'%>
    <label for="star3"><span class="text">普通</span>★</label>

    <%= f.radio_button :overall, 2 ,id: 'star4'%>
    <label for="star4"><span class="text">悪い</span>★</label>

    <%= f.radio_button :overall, 1 ,id: 'star5'%>
    <label for="star5"><span class="text">最悪</span>★</label>
 </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :adress, :size => 30 %>
  </div>


  <div class="field">
    <%= f.label :営業時間 %>
    <%= f.text_field :time, :size => 30 %>
  </div>


   <div class="field">
   <%= f.label :アクセス %>
   <%= f.text_field :access, :size => 30 %>
 </div>


  <div class="field">
    <%= f.label :駐車場 %>
    <%= f.text_field :parking, :size => 30 %>
  </div>


  <div class="field">
    <%= f.label :説明  %>
    <%= f.text_area :about, :size => "30x2" %>
  </div>

  <div class="field">
  <%= f.label :image %>
  <%= f.file_field :image %>
</div>

  <%= f.submit "投稿する" %>
<% end %>

<%= link_to "一覧に戻る", spots_path %>